<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        
    <h3>Create a new Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a cathy title" type="text" class="form-control" required>
        </div>
    
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
        </div>
    
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter link" type="text" class="form-control">
        </div>
<div class="row">
    <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
    </div>

    <div class="mb-3 col-8">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="San-fransisco" type="text" class="form-control" required>
    </div>
</div>
       
        
<div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input name="listing[country]" placeholder="USA" type="text" class="form-control" required>
</div>
<br> 
    <button class="btn btn-dark add-btn">ADD</button> 
    
    </form>
    <br>
    <br>
    </div>
    </div>


